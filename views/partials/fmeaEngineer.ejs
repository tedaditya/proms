<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Maintenance Software</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Manual CSS -->
    <link rel="stylesheet" href="/stylesheets/fmea.css">
</head>


<body>
    <section class="wrapper">
        <h2>FMEA ENGINEER</h2>
        <div>
            <% if (messages.success) { %>
            <p class="alert alert-success m2-4 mb-2"><%- messages.success %></p>
            <% } %>
            <form action="/fmeaEngineer" method="POST">
                <div class="mb-3">
                    <label for="komponenDataList" class="form-label">Komponen</label>
                    <!-- <select class="form-select" aria-label="Default select example">
                        <option selected>Open this select menu</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select> -->
                    <input class="form-control" list="datalistOptions" id="komponenDataList"
                        placeholder="Pilih komponen" name="komponen">
                    <datalist id="datalistOptions">
                        <option value="Casing">
                        <option value="Nozzle">
                        <option value="Rotor">
                        <option value="Diaphragm">
                        <option value="Labyrinth Seals">
                        <option value="Motor Turning Gear">
                        <option value="Coupling">
                        <option value="Blade">
                        <option value="Thurst Bearing">
                        <option value="Journal Bearing">
                    </datalist>
                </div>
                <div class="mb-3">
                    <label for="fungsi" class="form-label">Fungsi</label>
                    <textarea class="form-control" id="fungsi" rows="3" name="fungsi"></textarea>
                </div>
                <div class="responKegagalan">
                    <div class="mb-3">
                        <label for="potensiKegagalan" class="form-label">Potensi kegagalan</label>
                        <input type="text" class="form-control" id="potensiKegagalan" name="potensi_kegagalan">
                    </div>
                    <div class="mb-3">
                        <label for="efekKegagalan" class="form-label">Efek kegagalan</label>
                        <textarea class="form-control" id="efekKegagalan" rows="3" name="efek_kegagalan"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="penyebabKegagalan" class="form-label">Penyebab kegagalan</label>
                        <textarea class="form-control" id="penyebabKegagalan" rows="3"
                            name="penyebab_kegagalan"></textarea>
                    </div>
                </div>
                <div class="button-wrapper d-flex justify-content-end">
                    <button type="" class="btn btn-outline-secondary">Tambah respon kegagalan</button>
                    <button type="submit" class="btn btn-primary btn-submit">Submit</button>
                </div>

            </form>
        </div>
    </section>

</body>
<!-- JQuery JS -->
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
<!-- Bootstrap JS-->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<!-- Manual JS -->
<script src="/javascripts/dashboard.js"></script>
<!-- FontAwesome JS -->
<script src="https://kit.fontawesome.com/7441451cf7.js" crossorigin="anonymous"></script>

</html>